---
import { Seo } from 'astro-seo-meta'
import '../styles/main.scss'

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <Seo description="Meta Savages" />
    <slot name="seo" />
  </head>

  <body class="antialiased">
    <slot />
  </body>
</html>
