---
import './styles.scss'
---

<header class="fixed inset-x-0 top-0 z-50">
  <div class="mx-auto flex max-w-screen-xl items-center justify-between px-4 lg:px-8 xl:px-0">
    <a href="/">
      <span class="sr-only">Meta Savages</span>
      <img class="w-24 lg:w-40 xl:w-48" src="/images/meta-savages.png" alt="Meta Savages" />
    </a>

    <nav
      class="hidden font-display font-bold md:flex md:items-center md:gap-4 lg:gap-8 lg:text-lg xl:gap-10 xl:text-xl"
      aria-label="Desktop navigation"
    >
      <a class="uppercase transition-all active" href="#">Metaverse</a>
      <a class="uppercase transition-all" href="#">NFT's</a>
      <a class="uppercase transition-all" href="#">Roadmap</a>
      <a class="uppercase transition-all" href="#">Team &amp; Partners</a>
      <a class="uppercase transition-all" href="#">Contact</a>
    </nav>
  </div>
</header>

<script>
  const nav = document.querySelector('[aria-label="Desktop navigation"]')
  const links = nav.querySelectorAll('a')

  links.forEach((link) => {
    link.addEventListener('click', (event) => {
      event.preventDefault()
    })
  })
</script>
